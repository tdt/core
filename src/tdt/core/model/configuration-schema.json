{
    "title" : "The Resources model configuration.",
    "$schema" : "http://json-schema.org/draft-04/schema#",
    "description": "The configuration object schema validation for configuring the ResourcesModel class.",
    "type" : "object",
    "required" : true,
    "properties":{
        "general" : {
            "type" : "object",
            "required" : true,
            "properties" : {
                "timezone" : {
                    "type" : "string"
                },
                "defaultlanguage" : {
                    "type" : "string"
                },
                "defaultformat" : {
                    "type" : "string"
                },
                "accesslogapache" : {
                    "type" : "string"
                },
                "apachelogformat" : {
                    "type" : "string"
                },

                "cache" : {
                    "type" : "object",
                    "properties" : {
                        "system" : {
                            "type" : "string"
                        },
                        "host" : {
                            "type" : "string"
                        },
                        "port" : {
                            "type" : "integer"
                        }
                    }
                },

                "faultinjection" : {
                    "type" : "object",
                    "properties" : {
                        "enabled" : {
                            "type" : "boolean"
                        },
                        "period" : {
                            "type" : "integer"
                        }
                    }
                },

                "auth" : {
                    "type" : "object",
                    "properties" : {
                        "enabled" : {
                            "type" : "boolean"
                        },
                        "api_user" : {
                            "type" : "string"
                        },
                        "api_passwd" : {
                            "type" : "string"
                        }
                    }
                },

                "logging" : {
                    "type" : "object",
                    "properties" : {
                        "enabled" : {
                            "type" : "boolean"
                        },
                        "path" : {
                            "type" : "string"
                        }
                    }
                }
            }
        },

        "db" : {
            "type" : "object",
            "required" : true,
            "properties" : {
                "system" : {
                    "type" : "string"
                },
                "host" : {
                    "type" : "string"
                },
                "name" : {
                    "type" : "string"
                },
                "user" : {
                    "type" : "string"
                },
                "password" : {
                    "type" : "string"
                }
            }
        }
    },
    "required" : ["general","db"]
}